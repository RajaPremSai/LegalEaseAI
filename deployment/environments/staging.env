# Staging Environment Configuration
NODE_ENV=staging
NEXT_TELEMETRY_DISABLED=1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id-staging
GOOGLE_CLOUD_REGION=us-central1

# Database Configuration
# DATABASE_URL will be set via Secret Manager

# Redis Configuration
# REDIS_URL will be set via Secret Manager

# JWT Configuration
# JWT_SECRET will be set via Secret Manager

# API Configuration
API_TIMEOUT=30000
MAX_FILE_SIZE=52428800  # 50MB

# Performance Configuration
CACHE_TTL=60000  # 1 minute (shorter for testing)
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000

# Security Configuration
CORS_ORIGIN=https://your-staging-domain.com
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=200  # More lenient for testing

# Monitoring Configuration
LOG_LEVEL=debug
ENABLE_METRICS=true
METRICS_PORT=9090

# AI Configuration
AI_MODEL_TIMEOUT=60000
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.3
AI_CACHE_TTL=300000  # 5 minutes (shorter for testing)